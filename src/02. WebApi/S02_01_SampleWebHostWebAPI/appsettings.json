{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "*.BodyLoggingHandler": "Debug",
      "SampleWebHostWebAPI": "Trace"
    }
  },
  "Diginsight": {
    "Activities": {
      "LogBehavior": "Show",
      "LogLevel": "Debug", // ⚠️ Was "ActivityLogLevel" (both work for backward compatibility)
      "RecordSpanDuration": true,
      "SpanDurationMeterName": "SampleWebHostWebAPI",
      "SpanDurationMetricName": "diginsight.span_duration",
      "SpanDurationMetricDescription": "Duration of application spans",
      "ActivitySources": {
        "Microsoft.AspNetCore": true,
        "System.Net.Http": true,
        "Experimental.*": false,
        "Diginsight.*": true,
        "S02_01_SampleWebHostWebAPI": true
      },
      "LoggedActivityNames": {
        "System.Net.Http|System.Net.Http.HttpRequestOut": "Hide", // ActivitySource|ActivityName
        "Microsoft.AspNetCore.Hosting.HttpRequestIn": "Hide" // ActivityName
      }
    }
  },
  "Observability": {
    "ConsoleEnabled": true,
    "Log4NetEnabled": true,
    "DebugEnabled": false
  },
  "OpenTelemetry": {
    "EnableTraces": true,
    "EnableMetrics": true,
    "AzureMonitorConnectionString": "",
    "ActivitySources": [
      "Azure.Cosmos.Operation",
      "Azure.Storage.Blobs.BlobBaseClient",
      "Microsoft.AspNetCore",
      "Diginsight.*",
      "S02_01_SampleWebHostWebAPI"
    ],
    "Meters": [
      "SampleWebHostWebAPI"
    ],
    "ExcludedHttpHosts": [
      "login.microsoftonline.com",
      ".documents.azure.com",
      ".applicationinsights.azure.com",
      ".monitor.azure.com",
      ".b2clogin.com"
    ]
  },
  "AllowedHosts": "*"
}
