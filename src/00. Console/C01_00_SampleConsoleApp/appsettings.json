{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "*.BodyLoggingHandler": "Debug",
      "SampleConsoleApp": "Trace"
    }
  },
  "Diginsight": {
    "Activities": {
      "LogBehavior": "Show",
      "LogLevel": "Debug", // ⚠️ Was "ActivityLogLevel" (both work for backward compatibility)
      "RecordSpanDuration": true,
      "SpanDurationMeterName": "C01_00_SampleConsoleApp",
      "SpanDurationMetricName": "diginsight.span_duration",
      "SpanDurationMetricDescription": "Duration of application spans",
      "ActivitySources": {
        "Azure.Cosmos.Operation": true,
        "Azure.Storage.Blobs.BlobBaseClient": true,
        "Microsoft.AspNetCore": true,
        "System.Net.Http": true,
        "Experimental.*": false,
        "Diginsight.*": true,
        "C01_00_SampleConsoleApp": true
      },
      "LoggedActivityNames": {
        "SmartCache.OnEvicted": "Hide",
        "SmartCache.SetValue": "Hide",
        "System.Net.Http|System.Net.Http.HttpRequestOut": "Hide",
        "Operation.query_items": "Hide",
        "Operation.upsert_item": "Hide",
        "Experimental.System.Net.*": "Hide"
      },
      "SpanMeasuredActivityNames": {},
      "MetricSpecificSpanMeasuredActivityNames": [
        {
          "MetricName": "diginsight.span_duration",
          "ActivityNames": {}
        },
        {
          "MetricName": "diginsight.query_cost",
          "ActivityNames": {}
        }
      ],
      "MetricTags": [
        "category_name",
        "user_company"
      ],
      "MetricSpecificTags": [
        {
          "MetricName": "diginsight.span_duration",
          "MetricTags": []
        }
      ]
    },
    "Console": {
      "TotalWidth": -1,
      "UseColor": true
    }
  },
  "Observability": {
    "ConsoleEnabled": true,
    "Log4NetEnabled": true,
    "DebugEnabled": false
  },
  "OpenTelemetry": {
    "EnableTraces": true,
    "EnableMetrics": true,
    "AzureMonitorConnectionString": "",
    "ActivitySources": [
      "Azure.Cosmos.Operation",
      "Azure.Storage.Blobs.BlobBaseClient",
      "Microsoft.AspNetCore",
      "Diginsight.*",
      "C01_00_SampleConsoleApp"
    ],
    "Meters": [
      "Diginsight.Components.*",
      "C01_00_SampleConsoleApp"
    ],
    "ExcludedHttpHosts": [
      "login.microsoftonline.com",
      ".documents.azure.com",
      ".applicationinsights.azure.com",
      ".monitor.azure.com",
      ".b2clogin.com"
    ]
  },
  "AllowedHosts": "*"
}
